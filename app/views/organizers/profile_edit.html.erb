<%= render 'layouts/navbar' %>
<%= render 'layouts/flash' %>
<div class="container manage-entries">
  <div class="row">
    <div class="col-xs-12">
      <div class="manage-inspiration">
        <%= render 'layouts/organizer_intro_block', locals: {organizer: @organizer} %>
      </div>
      <div class="manage-container">
        <div class="manage-sidebar">
          <%= render partial: 'organizer_side_menu_account' %>
        </div>
        <div class="manage-main">
          <div class="">
            <%= form_for @organizer, class: "form", multipart: true, role: "form" do |f| %>
                <div class="card card-block text-xs-center">
                  <h3 class="card-title"><%= t('hello-organizer-welcome-account-edit', organizer: @organizer.name) %></strong></h3>
                  <div class="card-text">
                    <p><%= t('organizer-account-welcome-account-edit-title') %></p>
                    <p><%= t('organizer-account-edit-desc') %></p>
                  </div>
                  <div class="text-xs-center">
                    <%= image_tag("guide-account.svg", :width => 64, :alt => "new truppie", :class => 'spaced-down') %>
                  </div>
                  <div class="file-upload">
                    <% if f.object.picture.present? %>
                        <%= image_tag(f.object.picture.url(:thumbnail), :alt => "user document picture", :class => "img-fluid center-block spaced-down") %>
                    <% end %>
                    <button class="file-upload-btn btn btn-info-outline btn-block spaced-down" type="button" onclick="$('.file-upload-input').trigger( 'click' )"><%= t('event-add-image') %></button>
                    <div class="image-upload-wrap">
                      <%= f.file_field :picture, class: "file-upload-input", accept: "image/*" %>
                      <div class="drag-text">
                        <h3><%= t('event-drag-drop-file') %></h3>
                      </div>
                    </div>
                    <div class="file-upload-content">
                      <div class="image-title-wrap">
                        <button type="button" onclick="removeUpload()" class="remove-image btn btn-warning-outline space-top"><%= t('event-remove-image-upload') %> <span class="image-title"><%= t('event-image-upload') %></span></button>
                      </div>
                    </div>
                  </div>
                </div>
                <fieldset class="form-group <%= form_error(flash[:errors], :name) %>">
                  <%= f.label :name, class: "form-control-label" %>
                  <%= f.text_field :name, placeholder: t('organizer-name-label'), class: "form-control #{form_field_error(flash[:errors], :name)}" %>
                  <%= error_message(flash[:errors], :name) %>
                </fieldset>
                <fieldset class="form-group <%= form_error(flash[:errors], :description) %>">
                  <%= f.label :description, class: "form-control-label" %>
                  <%= f.text_area :description, placeholder: t('organizer-desc-label'), class: "form-control #{form_field_error(flash[:errors], :description)}" %>
                  <%= error_message(flash[:errors], :description) %>
                </fieldset>
                <fieldset class="form-group <%= form_error(flash[:errors], :email) %>">
                  <%= f.label :email, class: "form-control-label" %>
                  <%= f.email_field :email, placeholder: t('organizer-email-label'), class: "form-control #{form_field_error(flash[:errors], :email)}" %>
                  <%= error_message(flash[:errors], :email) %>
                </fieldset>
                <fieldset class="form-group">
                  <legend><%= t('organizer-external-refs-legend') %></legend>
                  <fieldset class="form-group <%= form_error(flash[:errors], :website) %>">
                    <%= f.label :website, class: "form-control-label" %>
                    <%= f.text_field :website, placeholder: t('organizer-website-label'), class: "form-control #{form_field_error(flash[:errors], :website)}" %>
                    <%= error_message(flash[:errors], :website) %>
                  </fieldset>
                  <fieldset class="form-group <%= form_error(flash[:errors], :facebook) %>">
                    <%= f.label :facebook, class: "form-control-label" %>
                    <%= f.text_field :facebook, placeholder: t('organizer-facebook-label'), class: "form-control #{form_field_error(flash[:errors], :facebook)}" %>
                    <%= error_message(flash[:errors], :facebook) %>
                  </fieldset>
                  <fieldset class="form-group <%= form_error(flash[:errors], :twitter) %>">
                    <%= f.label :twitter, class: "form-control-label" %>
                    <%= f.text_field :twitter, placeholder: t('organizer-twitter-label'), class: "form-control #{form_field_error(flash[:errors], :twitter)}" %>
                    <%= error_message(flash[:errors], :twitter) %>
                  </fieldset>
                  <fieldset class="form-group <%= form_error(flash[:errors], :instagram) %>">
                    <%= f.label :instagram, class: "form-control-label" %>
                    <%= f.text_field :instagram, placeholder: t('organizer-instagram-label'), class: "form-control #{form_field_error(flash[:errors], :instagram)}" %>
                    <%= error_message(flash[:errors], :instagram) %>
                  </fieldset>
                  <fieldset class="form-group <%= form_error(flash[:errors], :phone) %>">
                    <%= f.label :phone, class: "form-control-label" %>
                    <%= f.text_field :phone, placeholder: t('organizer-phone-label'), class: "form-control #{form_field_error(flash[:errors], :phone)}" %>
                    <%= error_message(flash[:errors], :phone) %>
                  </fieldset>
                <button type="submit" class="btn btn-primary pull-right"><%= t('update-organizer-action') %></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="fullscreen_bg" class="fullscreen_bg"></div>
</div>