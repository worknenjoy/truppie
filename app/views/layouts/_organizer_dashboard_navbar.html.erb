<nav class="navbar navbar-light bg-faded spaced-down">
  <%= link_to dashboard_organizer_path(@organizer), class: 'navbar-brand' do %>
    <i class="fa fa-map-o"></i> <%= @organizer.name %>
  <% end %>
    <ul class="nav navbar-nav">
      <li class="nav-item <%= "active" if current_page? action: 'manage' %>">
        <%= link_to manage_organizer_path(@organizer), class: 'nav-link' do %>
          balanços                
        <% end %>
      </li>
      <li class="nav-item <%= "active" if current_page? action: 'transfer' %>">
        <%= link_to transfer_organizer_path(@organizer), class: 'nav-link' do %>
          transferências               
        <% end %>
      </li>
    </ul>
    <% if @organizer.marketplace.try(:account_missing) %>
      <span class="navbar-text pull-right">
        <span class="label label-pill label-success">Conta verificada</span>
      </span>
    <% else %>
      <span class="navbar-text pull-md-right">
        <span class="label label-pill label-danger">Conta não verificada</span>
      </span>
    <% end %>
</nav>